<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bordertb"
    app:layout_collapseParallaxMultiplier="1.0">


    <android.support.constraint.ConstraintLayout
        android:layout_height="134dp"
        android:background="#000000"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="384dp"
        tools:layout_editor_absoluteX="0dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="139dp"

            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:id="@+id/linearLayout3"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="124dp"
            app:layout_constraintVertical_bias="0.57"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">


            <ImageView
                android:id="@+id/imagen_single_post_circuito"
                android:paddingTop="10px"
                android:scaleType="centerCrop"
                android:background="#ffffff"
                android:contentDescription=""
                tools:ignore="ContentDescription,PxUsage"
                android:layout_width="137dp"
                android:layout_height="124dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="123dp"
            android:background="#ffffff"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:id="@+id/constraintLayout"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="220dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintVertical_bias="0.43"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="211dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/linearLayout"
                android:layout_height="26dp"
                tools:layout_editor_absoluteY="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/name"
                    android:text="Modelo"
                    android:textStyle="bold"
                    android:textSize="35px"

                    tools:ignore="HardcodedText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/linearLayout4"
                android:layout_height="76dp"
                android:layout_width="202dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:id="@+id/description"
                    android:text="TextView"
                    android:textSize="30px"
                    tools:ignore="HardcodedText,PxUsage"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>



